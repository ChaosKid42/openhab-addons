<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="luxtronik"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:thing="https://openhab.org/schemas/thing-description/v1.0.0"
	xsi:schemaLocation="https://openhab.org/schemas/thing-description/v1.0.0 https://openhab.org/schemas/thing-description-1.0.0.xsd">

	<!-- Heatpump Type -->
	<thing-type id="heatpump">
		<label>Luxtronik Heatpump</label>
		<description>Luxtronik Heatpump Thing</description>

		<channels>
			<channel id="cooling-operation-mode" typeId="cooling-operation-mode"/>
			<channel id="temperature_outside" typeId="system.outdoor-temperature"/>
		</channels>

		<config-description>
			<parameter name="host" type="text" required="true">
				<context>network-address</context>
				<label>Host</label>
				<description>Host name or IP address.</description>
			</parameter>

			<parameter name="port" type="integer" required="true">
				<label>Port</label>
				<description>TCP port.</description>
				<default>8888</default>
			</parameter>

			<parameter name="connectionTimeout" type="integer" unit="ms" required="false">
				<label>Connection Timeout</label>
				<description>TCP Socket Connection Timeout (milliseconds).</description>
				<default>5000</default>
			</parameter>

			<parameter name="pollingInterval" type="integer" min="1" max="3600" unit="s" required="false">
				<label>Polling Interval</label>
				<description>The polling interval in seconds.</description>
				<default>60</default>
			</parameter>
		</config-description>

	</thing-type>

	<!-- Channel Types -->
	<channel-type id="cooling-operation-mode">
		<item-type>Number</item-type>
		<label>Cooling Operation Mode</label>
		<description>Cooling Operation Mode</description>
		<state>
			<options>
				<option value="0">Off</option>
				<option value="1">Automatic</option>
			</options>
		</state>
	</channel-type>

</thing:thing-descriptions>
